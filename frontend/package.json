{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-modules"
    ],
    "plugins": [
      "@babel/plugin-syntax-import-meta"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "src/"
    ],
    "testMatch": [
      "<rootDir>/src/tests/AuthenticationUITests.test.js",
      "<rootDir>/src/tests/CommentUITests.test.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "coverageProvider": "v8",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/pages/Login.jsx",
      "<rootDir>/src/pages/Register.jsx",
      "<rootDir>/src/components/Menu.jsx",
      "<rootDir>/src/pages/EditComment.jsx",
      "<rootDir>/src/pages/PostDetails.jsx",
      "<rootDir>/src/components/Comment.jsx",
      "!<rootDir>/src/tests/**/*.test.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary",
      "html"
    ],
    "testPathIgnorePatterns": [
      "\\\\node_modules\\\\"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "concurrently \"npm run start-backend\" \"npm run test-frontend\"",
    "start-backend": "cd ../backend && npm start",
    "test-frontend": "concurrently \"npm run dev\" \"jest --coverage --coverageReporters=text text-summary\"",
    "clear-cache": "jest --clearCache"
  },
  "dependencies": {
    "@testing-library/react": "^14.1.2",
    "axios": "^1.6.7",
    "chai": "^5.0.0",
    "chromedriver": "^120.0.2",
    "concurrently": "^8.2.2",
    "dom": "^0.0.3",
    "history": "^5.3.0",
    "mocha": "^10.2.0",
    "msw": "^2.1.5",
    "node-fetch": "^3.3.2",
    "nyc": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router": "^6.21.1",
    "react-router-dom": "^6.21.3",
    "selenium-webdriver": "^4.17.0",
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-modules": "^0.1.6",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/jest-dom": "^6.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.33",
    "puppeteer": "^21.9.0",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.8"
  }
}
